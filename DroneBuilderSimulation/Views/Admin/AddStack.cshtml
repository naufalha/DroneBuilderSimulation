@using DroneBuilderSimulation.DTOs.Requests
@model CreateStackRequest

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Add Flight Controller Stack</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddStack" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Model Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. SpeedyBee F405 Stack" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                        <input asp-for="Manufacturer" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label">Price ($)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="WeightGrams" class="form-label">Weight (g)</label>
                        <input asp-for="WeightGrams" type="number" step="0.1" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>
                </div>

                <hr />

                <h5 class="mb-3 text-muted">Electronics Specs</h5>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Processor" class="form-label">Processor (MCU)</label>
                        <select asp-for="Processor" class="form-select">
                            <option value="F405">F405 (Budget)</option>
                            <option value="F722">F722 (Performance)</option>
                            <option value="H7">H7 (High End)</option>
                            <option value="F411">F411 (Whoop)</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EscCurrentRatingAmps" class="form-label">ESC Amps (A)</label>
                        <input asp-for="EscCurrentRatingAmps" type="number" class="form-control" placeholder="e.g. 50" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Firmware" class="form-label">Firmware Target</label>
                        <input asp-for="Firmware" class="form-control" value="Betaflight" />
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-info text-white">Save Stack</button>
                </div>
            </form>
        </div>
    </div>
</div>