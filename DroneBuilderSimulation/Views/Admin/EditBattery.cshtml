@using DroneBuilderSimulation.DTOs.Requests
@model UpdateBatteryRequest

<div class="container mt-4">
    <div class="card shadow-sm" style="max-width: 800px; margin: auto;">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Edit Battery</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditBattery" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                
                @if(ViewBag.CurrentImageUrl != null)
                {
                    <div class="text-center mb-3">
                        <img src="@ViewBag.CurrentImageUrl" class="img-thumbnail" style="height: 100px;">
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Model Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                        <input asp-for="Manufacturer" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label">Price ($)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="WeightGrams" class="form-label">Weight (g)</label>
                        <input asp-for="WeightGrams" type="number" step="0.1" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ImageFile" class="form-label">Change Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="CellCountS" class="form-label">Cell Count (S)</label>
                        <input asp-for="CellCountS" type="number" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CapacityMah" class="form-label">Capacity (mAh)</label>
                        <input asp-for="CapacityMah" type="number" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CRating" class="form-label">C-Rating</label>
                        <input asp-for="CRating" type="number" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="BatteryList" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-warning">Update Battery</button>
                </div>
            </form>
        </div>
    </div>
</div>