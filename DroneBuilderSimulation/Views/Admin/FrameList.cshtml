@using DroneBuilderSimulation.Models.Entities
@model IEnumerable<Frame>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Frames Inventory</h2>
        <a asp-action="AddFrame" class="btn btn-primary">+ Add New Frame</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No frames found. Add one to get started!</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Model</th>
                            <th>Specs</th>
                            <th>Price</th>
                            <th>Weight</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width: 80px;">
                                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="height: 50px; width: 50px; object-fit: cover;">
                                </td>
                                <td>
                                    <strong>@item.Name</strong><br />
                                    <small class="text-muted">@item.Manufacturer</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.SizeCategory</span>
                                    <small>@item.Material</small>
                                </td>
                                <td class="text-success fw-bold">$@item.Price</td>
                                <td>@item.WeightGrams g</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditFrame" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        
                                        <form asp-action="DeleteFrame" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Delete this frame?');" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>